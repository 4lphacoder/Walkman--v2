<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCodGray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/root_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@null"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_drawer_btn_white" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_settings_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/logo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_walkman_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/personalised_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="Hi There, Ghostman."
                android:textAlignment="viewStart"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24sp"
                android:textColor="@color/colorWhite"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_panel"/>
            <HorizontalScrollView
                android:id="@+id/recommendation_based_on_user_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personalised_greeting"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingRight="32dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/favorite_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/favorite_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Favourite Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Based on songs which\n you likes." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/most_listened_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/most_listened_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="0dp"
                            android:text="Most Listened Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Based on what you hears\nmost of the time" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/english_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/english_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="English Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Plays all English songs\nwhich you likes." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/punjabi_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/punjabi_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Punjabi Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Plays all Punjabi songs\nwhich you likes." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bollywood_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/bollywood_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Bollywood Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Plays all Bollywood songs\nwhich you likes." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/rarely_listened_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/rarely_listened_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Undiscovered Songs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Plays all those songs which\nyou likes but rarely listens" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/moods_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/colorWhite"
                android:text="Moods"
                android:textAlignment="viewStart"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendation_based_on_user_taste" />

            <HorizontalScrollView
                android:id="@+id/moods_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moods_text" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingRight="32dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/workout_music"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/workout_music_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Workout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Get ready for your full\nbody workout." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/dancing_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/dancing_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Dance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Songs that will make you\nget-up and dance." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/relaxing_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/sleepy_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Relaxing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Songs that will help you\nrelax and fall asleep." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/edm_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/edm_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="EDM" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Most overplayed EDM\nsongs of all time." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/romantic_music"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/romantic_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Romantic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Get in the romantic mood\nwith our love songs." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sad_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/sad_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Sad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Sad songs to get you\ncrying like a baby." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/concentrating_songs"
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:background="@drawable/concentrating_songs_illustration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="Concentration" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:lineHeight="12sp"
                            android:text="Time to travel inwards\nand feel the bliss!." />
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/trending_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/colorWhite"
                android:text="Trending Now"
                android:textAlignment="viewStart"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moods_categories" />
            <LinearLayout
                android:id="@+id/trending_now_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trending_now" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="start"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/hit_songs_in_india_illustration"
                        android:layout_width="140dp"
                        android:layout_height="160dp"
                        android:layout_gravity="start"
                        android:src="@drawable/hit_songs_india_illustration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/hit_songs_in_india_illustration"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:text="Hit Songs in India" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="viewStart"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:text="Your daily update of all time\nmost played tracks in India.\nBased on Youtube Music\nGlobal charts." />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="start"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/weeky_hit_songs_in_india_illustration"
                        android:layout_width="140dp"
                        android:layout_height="160dp"
                        android:layout_gravity="start"
                        android:src="@drawable/weekly_hit_songs_india_illustration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/weeky_hit_songs_in_india_illustration"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:text="Weekly top hits in India" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSilverChalice"
                            android:textAlignment="viewStart"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:text="Listen to the top hits of this\nweek in India.\nBased on Youtube Music\nGlobal charts." />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="start"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/hit_songs_globally_illustration"
                        android:layout_width="140dp"
                        android:layout_height="160dp"
                        android:layout_gravity="start"
                        android:src="@drawable/hit_songs_globally_illustration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/hit_songs_globally_illustration"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
